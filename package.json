{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "Node ts tempate service",
	"main": "index.js",
	"scripts": {
		"start": "node -r source-map-support/register dist",
		"start-dev": "nodemon -r source-map-support/register dist",
		"watch": "tsc --watch --pretty",
		"build": "tsc",
		"prettier": "prettier --config package.json --write 'src/**/*.ts'",
		"gen:migrations": "tsc &&  typeorm --config ./dist/ormconfig.js migration:generate -n",
		"db:migrate": "typeorm --config ./dist/ormconfig.js migration:run",
		"db:revert": "typeorm --config ./dist/ormconfig.js migration:revert",
		"swagger": "swaggerGen -c ./swagger.config.yml",
		"list": "eslint . --ext .js,.jsx,.ts,.tsx",
		"test": "jest",
		"docker-build": "run-s -n docker-build:*",
		"docker-build:server": "docker build -t hestia-backend:latest ./ ",
		"docker-build:mail": "docker build -t mail-service:latest ./mail ",
		"docker-build:backup": "docker build -t db_backup:latest  ./db_backup ",
		"docker-run": "yarn docker-run:server",
		"docker-run:server": "docker-compose -f docker-compose-server.yml up",
		"docker-run:mail": "docker-compose -f ./mail/docker-compose-mail.yml up",
		"docker-run:db": "docker-compose -f docker-compose-db-only.yml up",
		"docker-run:migrations": "docker-compose -f docker-compose-migrations.yml up"
	},
	"keywords": [
		"swagger"
	],
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@godaddy/terminus": "^4.3.1",
		"axios": "^0.19.2",
		"bcrypt": "^5.0.0",
		"cors": "^2.8.5",
		"dotenv": "^5.0.1",
		"express": "^4.17.1",
		"express-rate-limit": "^5.2.6",
		"morgan": "^1.10.0",
		"nodemailer": "^6.5.0",
		"pg": "^8.6.0",
		"pino": "^6.2.0",
		"pino-pretty": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"source-map-support": "^0.5.16",
		"typeorm": "^0.2.34",
		"typescript-rest": "^3.0.1",
		"typescript-rest-swagger": "^1.1.1",
		"uuid": "7.0.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.6",
		"@types/express-rate-limit": "^5.1.2",
		"@types/jest": "^25.2.1",
		"@types/morgan": "^1.9.0",
		"@types/node": "^13.11.1",
		"@types/nodemailer": "^6.4.1",
		"@types/pino": "^6.0.0",
		"@types/uuid": "^8.0.0",
		"@typescript-eslint/eslint-plugin": "^2.24.0",
		"@typescript-eslint/parser": "^2.28.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-typescript": "^7.2.1",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-prettier": "^3.1.3",
		"jest": "^25.4.0",
		"nodemon": "^1.19.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"ts-jest": "^25.4.0",
		"typescript": "^3.8.3"
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"singleQuote": true,
		"trailingComma": "all",
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"endOfLine": "auto",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": true,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"useTabs": true,
		"vueIndentScriptAndStyle": false
	},
	"engines": {
		"node": ">=8.11.1"
	}
}
